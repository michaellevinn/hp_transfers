<div class="row">
  <div class="col-md-12">  
    <%= form_for([@partner, @partner.hotels.build], :html => {class: "form-horizontal", role: "form"} ) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-1"> 
          <%= f.label 'Название' %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div> 
      <div class="form-group">
        <div class="control-label col-sm-1"> 
          <%= f.label 'Адрес' %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-1">           
          <%= f.label 'Email' %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-1"> 
          <%= f.label 'Телефон' %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :phone, class: "form-control" %>
        </div>
      </div>
      <div class="col-sm-offset-1">
        <button type="submit" class="btn btn-success btn-sm">+ добавить отель</button>
      </div>

    <% end %>
  </div>
</div>
